<div class = "container">
<h1>Login</h1>
  <%= form_tag '/login' do %>
    <div class = "row form-group">
      <div class = "col">
        <%= text_field_tag :username %>
      </div>
    </div>
    <div class = "row form-group">
      <div class = "col">
        <%= password_field_tag :password%>
      </div>
    </div>
    <div class = "row form-group">
      <div class = "col">
        <%= submit_tag "Login", class: "btn btn-danger"%>
    </div>
    </div>
  <%end%>
  </div>
