<div class = "container">
  <div class = "row">
    <div class = "col-2">
      <div class = "col-8">

      <div class = "card">
        <div class = "card-header">
        <h1 class = "text-center">Sign Up</h1>
        </div>
        <div class = "card-body">
          <%= form_for @user do |f|%>
          <div class = "row form-group">
            <div class = "col">
           <%= f.text_field :username, class: "form-control"%><br>
          </div>
          </div>
          <div class = "row form-group">
            <div class = "col">
           <%= f.password_field :password, class: "form-control"%><br>
          </div>
          </div>
          <div class = "row form-group">
            <div class = "col">
          <%= f.submit %><%end%>
          </div>
        </div>
      </div>
  </div>
  </div>
</div>
</div>
</div>
